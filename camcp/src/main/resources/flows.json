{
  "tools": {
    "send-weather-events": {
      "connectors": ["kafka-weather", "kafka-weather2"]
    },
    "send-random-events": {
      "connectors": ["kafka-random"]
    }
  },
  "connectors": {
    "kafka-weather": {
      "endpoint": "kafka:weather-events",
      "params": { "brokers": "localhost:9092" }
    },
    "kafka-weather2": {
      "endpoint": "kafka:weather-archive",
      "params": { "brokers": "localhost:9092" }
    },
    "kafka-random": {
      "endpoint": "kafka:random-events",
      "params": { "brokers": "localhost:9092" }
    }
  }
}